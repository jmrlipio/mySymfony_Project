{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Property list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Propertyname</th>
                <th>Propertydetail</th>
                <th>Propertyimage</th>
                <th>Slug</th>
                <th>Datepublished</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('property_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.propertyName }}</td>
                <td>{{ entity.propertyDetail }}</td>
                <td>{{ entity.propertyImage }}</td>
                <td>{{ entity.slug }}</td>
                <td>{% if entity.datePublished %}{{ entity.datePublished|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('property_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('property_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('property_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
